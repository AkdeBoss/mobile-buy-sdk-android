<?xml version="1.0" encoding="utf-8"?>
<com.shopify.merchantapp.ui.cart.CartLineItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/line_item_image"
        android:layout_width="@dimen/cart_image_size"
        android:layout_height="@dimen/cart_image_size"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_6dp">

        <TextView
            android:id="@+id/line_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:textSize="@dimen/text_small"/>

        <TextView
            android:id="@+id/line_item_variant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/spacing_6dp"
            android:textSize="@dimen/text_small"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/line_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="@dimen/spacing_6dp"
                android:textSize="@dimen/text_small"/>

            <include
                android:id="@+id/quantity_picker"
                layout="@layout/quantity_picker"/>

        </LinearLayout>

        <View
            android:id="@+id/line_item_divider"
            style="@style/Divider"
            android:layout_above="@id/cart_footer"/>

    </LinearLayout>

</com.shopify.merchantapp.ui.cart.CartLineItemView>