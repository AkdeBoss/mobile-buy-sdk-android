<?xml version="1.0" encoding="utf-8"?>
<com.shopify.buy.ui.cart.CartFragmentView xmlns:android="http://schemas.android.com/apk/res/android"
                                          android:layout_width="match_parent"
                                          android:layout_height="match_parent">

    <ListView
        android:id="@+id/cart_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/checkout_button_height"
        android:background="@android:color/white"
        android:divider="@android:color/black"
        android:dividerHeight="1dp">
    </ListView>

    <LinearLayout
        android:id="@+id/cart_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/spacing_12dp">

        <Button
            android:id="@+id/checkout_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:textStyle="bold"
            android:text="@string/continue_to_checkout"
            android:textSize="@dimen/text_small"/>
    </LinearLayout>

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/snackbar_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/cart_footer">
    </android.support.design.widget.CoordinatorLayout>

</com.shopify.buy.ui.cart.CartFragmentView>
